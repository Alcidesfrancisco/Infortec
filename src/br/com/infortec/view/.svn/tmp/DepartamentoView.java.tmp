    private void deleteButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_deleteButtonActionPerformed
        int indexExcluir = table.getSelectedRow();

        Departamento excluirDepartamento = listaEditaDepartamento.get(indexExcluir);
        int excluido = departamentoDAO.excluirDepartamento(excluirDepartamento.getCodDepartamento());
        listaEditaDepartamento = departamentoDAO.listarTodosDepartamentos();
        table.setModel(tabelaModel(listaEditaDepartamento));

        txtNome.setText("");

        txtNome.setEnabled(false);
    }//GEN-LAST:event_deleteButtonActionPerformed

    private void btInserirActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btInserirActionPerformed
        cont = 2;

        txtNome.setText("");
        txtNome.setBorder(bordaOk.getBorder());

        txtNome.setEnabled(true);

        txtNome.requestFocus();

        int row = listaEditaDepartamento.size() - 1;
        table.scrollRectToVisible(table.getCellRect(row, 0, true));
    }//GEN-LAST:event_btInserirActionPerformed

    private void btSalvarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btSalvarActionPerformed
       if (txtNome.getText().equals("")){
       JOptionPane.showMessageDialog(null, "O nome do Departamento é de preenchimento obrigatório!");
       txtNome.setBorder(BordaErro.getBorder());
       
       }else if (cont % 2 == 0) {
            String nome = txtNome.getText();

            Departamento departamento = new Departamento(nome);
            int isDepartamento = departamentoDAO.inserirDepartamento(departamento);

            listaEditaDepartamento.add(departamento);
            table.setModel(tabelaModel(listaEditaDepartamento));
            int row = table.getRowCount() - 1;
            if (table.getRowCount() >= 1) {
                table.setRowSelectionInterval(row, row);
            }
            table.scrollRectToVisible(table.getCellRect(row, 0, true));

            txtNome.setText("");
            txtNome.setBorder(bordaOk.getBorder());
        } else if (cont % 2 == 1){
            String alterNome = txtNome.getText();

            Departamento departamentoAlterar = listaEditaDepartamento.get(table.getSelectedRow());

            departamentoAlterar.setNome(alterNome);

            departamentoDAO.alteraDepartamento(departamentoAlterar);

            table.setModel(tabelaModel(listaEditaDepartamento));

            txtNome.setText("");
            txtNome.setBorder(bordaOk.getBorder());
        }
    }//GEN-LAST:event_btSalvarActionPerformed

private void btEditarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btEditarActionPerformed
    if (cont % 2 == 0) {      //editar linha
        txtNome.setEnabled(true);

        btEditar.setText("Cancelar Edição");
        txtNome.requestFocus();
        cont++;
        editarLinha();

    } else {                //cancelar edição
        txtNome.setEnabled(false);

        btEditar.setText("Editar");
        txtNome.requestFocus();
        cont++;
    }
}//GEN-LAST:event_btEditarActionPerformed

