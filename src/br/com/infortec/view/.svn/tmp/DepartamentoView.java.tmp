    public TableModel tabelaModel(List<Departamento> listaDepartamentos) {
        int n = 0;
        JTable table1;

        listaDepartamentos = departamentoDAO.listarTodosDepartamentos();
        Object[][] data = new Object[listaDepartamentos.size()][2];
        String[] columnNames = {"Cod. Departamento", "Nome"};

        for (Departamento departamentos : listaDepartamentos) {
            data[n][0] = departamentos.getCodDepartamento();
            data[n][1] = departamentos.getNome();

            n++;
        }
        table1 = new JTable(data, columnNames);
        table1.setPreferredScrollableViewportSize(new Dimension(500, 300));
        table1.setFillsViewportHeight(true);
        table1.getColumnModel().getColumn(0).setPreferredWidth(100);
        table1.getColumnModel().getColumn(1).setPreferredWidth(300);
        javax.swing.table.TableModel model = table1.getModel();



        table.addMouseListener(new MouseAdapter() {

            public void mouseClicked(MouseEvent e) {
                if (cont % 2 == 1) {
                    editarLinha();
                }
            }
        });
        return model;
    }

    public void editarLinha() {


        int index = table.getSelectedRow();

        txtNome.setText((String) table.getValueAt(table.getSelectedRow(), 1));

    }

